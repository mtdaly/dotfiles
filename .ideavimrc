" Split Navigation (using ^+HJKL)
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>


nnoremap <space> za

nnoremap j gj
nnoremap k gk
inoremap jk <esc>
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
let python_highlight_all=1
syntax on
set laststatus=2
set mouse=a
